//-------------------------------------------------------------------------------
inline TLine::TLine()
{	   
}

//-------------------------------------------------------------------------------
inline TLine::TLine(const TLine& line)
:	m_p0(line.GetP0()),
	m_p1(line.GetP1())
{

}

//-------------------------------------------------------------------------------
inline TLine::TLine(const TVector3& p0, const TVector3& p1)
:	m_p0(p0),
	m_p1(p1)
{
}

//-------------------------------------------------------------------------------
inline TLine& TLine::operator=(const TLine& line)
{
	m_p0 = line.GetP0();
	m_p1 = line.GetP1();
	return *this;
}

//-------------------------------------------------------------------------------
inline const TVector3& TLine::GetP0() const
{
	return m_p0;
}

//-------------------------------------------------------------------------------
inline const TVector3& TLine::GetP1() const
{
	return m_p1;
}

//-------------------------------------------------------------------------------
inline void TLine::SetP0(const TVector3& p)
{
	m_p0 = p;
}

//-------------------------------------------------------------------------------
inline void TLine::SetP1(const TVector3& p)
{
	m_p1 = p;
}
